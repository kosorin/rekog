<Application x:Class="Rekog.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:clr="clr-namespace:System;assembly=mscorlib"
             xmlns:cx="clr-namespace:Rekog.App.Converters"
             xmlns:vm="clr-namespace:Rekog.App.ViewModel"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Converters.xaml" />
                <ResourceDictionary Source="Themes/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <vm:MainViewModel x:Key="MainViewModel" />

            <Style x:Key="GridSplitterBase" TargetType="{x:Type GridSplitter}" />

            <Style x:Key="HorizontalGridSplitter"
                   BasedOn="{StaticResource GridSplitterBase}"
                   TargetType="{x:Type GridSplitter}">
                <Setter Property="BorderThickness" Value="0,1" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GridSplitter}">
                            <Grid>
                                <Button BorderThickness="{TemplateBinding BorderThickness}"
                                        Content="····"
                                        IsHitTestVisible="False" />
                                <Rectangle Fill="Transparent" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="VerticalGridSplitter"
                   BasedOn="{StaticResource GridSplitterBase}"
                   TargetType="{x:Type GridSplitter}">
                <Setter Property="BorderThickness" Value="1,0" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GridSplitter}">
                            <Grid>
                                <Button BorderThickness="{TemplateBinding BorderThickness}"
                                        Content="⁞"
                                        IsHitTestVisible="False" />
                                <Rectangle Fill="Transparent" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <clr:Double x:Key="UnitSize">96</clr:Double>
            <cx:ScaleConverter x:Key="ScaleConverter" Size="{StaticResource UnitSize}" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
